<!-- Rule definition for project state in property sheet -->
<Rule Name="ConfigurationGeneralBrowseObject" DisplayName="Général" PageTemplate="generic" Description="Général" OverrideMode="Extend" xmlns="http://schemas.microsoft.com/build/2009/properties">
    <Rule.Categories>
        <Category Name="ContainerTools" DisplayName="Outils de conteneur" Description="Outils de conteneur"/>
    </Rule.Categories>
    <Rule.DataSource>
        <DataSource Persistence="ProjectFile" HasConfigurationCondition="false"/>
    </Rule.DataSource>

    <StringProperty Name="DockerImageLabels" ReadOnly="False" Category="ContainerTools" DisplayName="DockerImageLabels" Description="Ensemble d'étiquettes par défaut appliqué à l'image Docker.">
        <StringProperty.DataSource>
            <DataSource Persistence="ProjectFile" PersistedName="DockerImageLabels" HasConfigurationCondition="false"/>
        </StringProperty.DataSource>
    </StringProperty>
    <StringProperty Name="DockerfileContext" ReadOnly="False" Category="ContainerTools" DisplayName="DockerfileContext" Description="Contexte par défaut utilisé au moment de la génération de l'image Docker, sous forme de chemin relatif au Dockerfile.">
        <StringProperty.DataSource>
            <DataSource Persistence="ProjectFile" PersistedName="DockerfileContext" HasConfigurationCondition="false"/>
        </StringProperty.DataSource>
    </StringProperty>
</Rule>
